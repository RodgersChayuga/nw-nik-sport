{% if section.settings["show-announcement"] %}
  <section class="px-2 md:px-12 announcement-bar">
    <div class="flex items-center justify-between">
      <div class="flex gap-2">
        {% if section.settings.image != blank %}
          <img 
            height="40"
            width="40"
            loading="lazy"
            src="{{ section.settings.image  |  image_url }}"
          />
          {% else %}
          <img
          height="40"
            width="40"
            loading="lazy"
            src="{{ 'a.png'  |  asset_url }}"
          />
        {% endif %}
        {% if section.settings.image != blank %}
          <img 
            height="40"
            width="40"
            loading="lazy"
            src="{{ section.settings.image2  |  image_url }}"
          />
          {% else %}
          <img
          height="40"
            width="40"
            loading="lazy"
            src="{{ 'b.png'  |  asset_url }}"
          />
        {% endif %}
      </div>
      <div>
        <ul class="flex gap-2">
          {% if section.blocks.size == 0 %}
            <li>
              <a href="#">Help</a>
            </li>
            {% if shop.customer_accounts_enabled %}
              {% if customer %}
                <li>
                  <a href="/account">Account</a>
                </li>
                {% else %}
                <li>
                  <a href="/account/login">Sign in</a>
                </li>
              {% endif %}
            {% endif %}

            {%- else -%}
              {% for block in section.blocks %}
                <li>
                  <a href="{{ block.settings.link }}">{{ block.settings.text }}</a>
                </li>
              {% endfor %}
            
          {%  endif %}
        </ul>
        </div>
    </div>
  </section>
{% endif %}

<style>
  .announcement-bar{
    background: {{ section.settings.background_color}};
    color: {{ section.settings.text_color }};
  }
</style>

{% schema  %} 
{
  "name": "Announcement Bar",
  "settings": [
    {
      "type" : "checkbox",
      "id" : "show-announcement",
      "label": "Show Announcement",
      "default":true
    },
    {
      "type" : "image_picker",
      "id" : "image",
      "label": "pick image",
      "info": "png recommended format"
    },
    {
      "type" : "image_picker",
      "id" : "image2",
      "label": "pick image",
      "info": "png recommended format"
    },
    {
      "type": "color",
      "id":"background_color",
      "label":"Background Color",
      "default":"#f4f4f4"
    },
    {
      "type":"color",
      "id":"text_color",
      "label": "Text Color",
      "default": "#000000"
    }
  ],
  "blocks": [
    {
      "name":"Links",
      "type": "links",
      "limit": 4,
      "settings": [
        {
          "type":"text",
          "id":"text",
          "label":"Text",
          "default":"link"
        },
        {

          "type":"url",
          "id":"link",
          "label":"Link"
        } 
      ]
    }
  ],
  "presets": []
}
{% endschema %}